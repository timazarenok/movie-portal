.navbar{class: "navbar-expand-lg navbar-dark bg-dark text-white"}
  %a{class: "navbar-brand", href: "#"}
    =image_tag 'download.png', alt: 'movie-portal', height: '50px', width: '50px'
    Movie-portal
  %button.navbar-toggler{"aria-controls" => "navbarText", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarText", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarText.collapse.navbar-collapse
  %ul.navbar-nav.mr-auto
    %li.nav-item.active
      %a.nav-link{:href => "/"}
        Home
        %span.sr-only (current)
    %li.nav-item
      = link_to 'Profile', user_root_path, class: 'nav-link'
    - if current_user
      %li.nav-item Log out
    - else
      %li.nav-item Log in
