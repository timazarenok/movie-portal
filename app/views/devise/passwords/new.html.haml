.form_container
  %h2.form_header Forgot your password?
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      .input-group
        .input-group-prepend
          .input-group-text.bg-light.text-dark Email
        = f.email_field :email, :required => false, :autofocus => true, placeholder: 'email', class: 'form-control'
      %br/
    .actions
      = f.submit "Send me reset password instructions", class: "btn form_button"
  = render "devise/shared/links"
