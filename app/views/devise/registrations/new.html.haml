.form_container
  %h2.form_header Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      .input-group
        .input-group-prepend
          .input-group-text.bg-light.text-dark  Email
        = f.email_field :email, :required => false, :autofocus => true, placeholder: 'email', class: 'form-control'
      - if @minimum_password_length
        .small.form-text.text-muted (#{@minimum_password_length} characters minimum)
    .field
      .input-group
        .input-group-prepend
          .input-group-text.bg-light.text-dark Password
        = f.password_field :password, autocomplete: "new-password", class: 'form-control' 
    .field
      .input-group
        .input-group-prepend
          .input-group-text.bg-light.text-dark Confirmation
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
    .actions
      %button.btn.form_button Sign up
  = render "devise/shared/links"